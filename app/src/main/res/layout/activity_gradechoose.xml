<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <include layout="@layout/action_bar_bg50d8c0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="40dp"
        android:text="小学"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_primary1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="一年级"/>

        <TextView
            android:id="@+id/tv_primary2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_50d8c0"
            android:text="二年级"/>

        <TextView
            android:id="@+id/tv_primary3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="三年级"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_primary4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="四年级"/>

        <TextView
            android:id="@+id/tv_primary5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="五年级"/>

        <TextView
            android:id="@+id/tv_primary6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="六年级"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:text="初中"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_secondary1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="一年级"/>

        <TextView
            android:id="@+id/tv_secondary2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="二年级"/>

        <TextView
            android:id="@+id/tv_secondary3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="三年级"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:text="高中"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_high1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="一年级"/>

        <TextView
            android:id="@+id/tv_high2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="二年级"/>

        <TextView
            android:id="@+id/tv_high3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="三年级"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/rad19_50d8c0"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>
