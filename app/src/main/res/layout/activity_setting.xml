<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar_bg50d8c0" />

    <LinearLayout
        android:id="@+id/ll_modifyTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="19dp"
            android:text="修改手机号"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="19dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic1"
            android:drawablePadding="10dp"
            android:gravity="end"
            android:text="13333333333"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:id="@+id/ll_setPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center|start"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="19dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic1"
            android:drawablePadding="10dp"
            android:text="设置密码"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />
    <LinearLayout
        android:id="@+id/ll_getVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center|start"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="19dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic1"
            android:drawablePadding="10dp"
            android:text="检测新版本"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_loginOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="退出当前账号"
            android:background="@drawable/rad5_50d8c0"/>
    </LinearLayout>

</LinearLayout>
