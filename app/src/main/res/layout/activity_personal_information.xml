<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <include
        android:id="@+id/include"
        layout="@layout/action_bar_bg50d8c0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_touxiang"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="头像"
                        android:textColor="#80000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_touxiang"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="9dp"
                        android:scaleType="center" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/leftarrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="昵称"
                        android:textColor="#80000000"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/ed_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入昵称"
                        android:gravity="center|end"
                        android:textColor="#8E8E8E"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="性别"
                        android:textColor="#80000000"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_style3"
                            android:paddingHorizontal="5dp"
                            android:text="男"
                            android:textColor="#8E8E8E"
                            android:textSize="14sp" />
                        <RadioButton
                            android:id="@+id/rb_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="5dp"
                            android:button="@drawable/checkbox_style3"
                            android:paddingHorizontal="5dp"
                            android:text="女"
                            android:textColor="#8E8E8E"
                            android:textSize="14sp" />
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="出生日期"
                        android:textColor="#80000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_birth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:hint="请选择出生日期"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/leftarrow"
                        android:background="@null"
                        android:gravity="center|end"
                        android:textColor="#8E8E8E"
                        android:textSize="14sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#d2d2d2">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="年级"
                        android:textColor="#80000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_grade"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:hint="请选择年级"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/leftarrow"
                        android:background="@null"
                        android:gravity="center|end"
                        android:textColor="#8E8E8E"
                        android:textSize="14sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2">
                </View>
                <LinearLayout
                    android:id="@+id/ll_position"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="班级"
                        android:textColor="#80000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_position"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:hint="请选择班级"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/leftarrow"
                        android:background="@null"
                        android:gravity="center|end"
                        android:textColor="#8E8E8E"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:id="@+id/line_position"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2">
                </View>

                <LinearLayout
                    android:id="@+id/ll_school"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="学校"
                        android:textColor="#80000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_school"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:hint="请选择学校"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/leftarrow"
                        android:background="@null"
                        android:gravity="center|end"
                        android:textColor="#8E8E8E"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2">
                </View>

                <LinearLayout
                    android:id="@+id/ll_year"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="入学年份"
                        android:textColor="#80000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:hint="请选择入学年份"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/leftarrow"
                        android:background="@null"
                        android:gravity="center|end"
                        android:textColor="#8E8E8E"
                        android:textSize="14sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2">
                </View>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="336dp"
            android:layout_height="47dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="修改并保存"
            android:textColor="#ffffff"
            android:background="@drawable/rad2_50d8c0"
            />
    </LinearLayout>
</LinearLayout>
