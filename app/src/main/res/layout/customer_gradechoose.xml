<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="337dp"
    android:layout_height="410dp"
    android:background="@drawable/rad10_ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            android:gravity="center"
            android:text="设置我的年级"
            />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="0dp"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:src="@drawable/ic_close" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="40dp"
        android:text="小学"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_primary1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="一年级"/>

        <TextView
            android:id="@+id/tv_primary2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_50d8c0"
            android:text="二年级"/>

        <TextView
            android:id="@+id/tv_primary3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="三年级"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_primary4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="四年级"/>

        <TextView
            android:id="@+id/tv_primary5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="五年级"/>

        <TextView
            android:id="@+id/tv_primary6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="六年级"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:text="初中"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_secondary1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="一年级"/>

        <TextView
            android:id="@+id/tv_secondary2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="二年级"/>

        <TextView
            android:id="@+id/tv_secondary3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="三年级"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:text="高中"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_high1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="一年级"/>

        <TextView
            android:id="@+id/tv_high2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="二年级"/>

        <TextView
            android:id="@+id/tv_high3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="#515151"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rad14_f8f8f8"
            android:text="三年级"/>
    </LinearLayout>
</LinearLayout>
