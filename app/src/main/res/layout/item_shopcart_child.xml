<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout14"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:button="@drawable/checkbox_style3"
        android:text=""
        android:textColor="#2DB7B5"
        android:textSize="13sp"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageView83"
        android:layout_width="107dp"
        android:layout_height="95dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/checkBox3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/test3"
        />

    <TextView
        android:id="@+id/textView105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#515151"
        android:textSize="14sp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageView83"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#8E8E8E"
        android:textSize="12sp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageView83"
        app:layout_constraintTop_toBottomOf="@+id/textView105" />
    <LinearLayout
        android:layout_width="95dp"
        android:layout_height="27dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:background="@drawable/border_rad4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/reduce"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#515151"
            android:text="â€”"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d2d2d2"></View>
        <TextView
            android:id="@+id/num"
            android:layout_width="35dp"
            android:layout_height="27dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#515151"
            android:text="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d2d2d2"></View>
        <TextView
            android:id="@+id/add"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#2DB7B5"
            android:text="+"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView107"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#FF8600"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/imageView83"
        app:layout_constraintTop_toBottomOf="@+id/textView106" />

    <View
        android:id="@+id/view36"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#d2d2d2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView83" />
</android.support.constraint.ConstraintLayout>
